<div class="my-container">
<h1><%= t('.sign_in') %></h1>

<div class="max-w-md mx-auto bg-white border border-stone-200 rounded-md shadow-md p-8">

  <div class="mb-8 text-center">
    <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false },
        class: "relative max-w-sm mx-auto h-12 px-4 py-2 border border-[#747775] rounded-full bg-white text-[#1f1f1f] shadow transition hover:shadow-md flex items-center justify-center gap-3" do %>
      <div>
        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
          <path fill="none" d="M0 0h48v48H0z"/>
        </svg>
      </div>
      <span>Sign in with Google</span>
    <% end %>
  </div>

  <div class="flex items-center my-4">
    <div class="flex-grow border-t border-stone-300"></div>
    <span class="mx-4 text-stone-500">または</span>
    <div class="flex-grow border-t border-gray-300"></div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "inline-block mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "my-form-text" %>
    <% if resource.errors[:email].any? %>
      <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:email).first %></p>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "inline-block mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "my-form-text" %>
    <% if resource.errors[:password].any? %>
      <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:password).first %></p>
    <% end %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit t('.sign_in'), class: "w-full bg-orange-400 transition text-white px-4 py-2 rounded hover:bg-orange-500 cursor-pointer" %>
  </div>
<% end %>

<p class="text-center mt-6 text-sm font-semibold">
  <%= link_to "新規登録はこちら", new_registration_path(resource_name) %>
</p>
<p class="text-center mt-4 text-sm">
  <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "text-center mt-6 text-sm font-semibold" %>
</p>
<%# = render "devise/shared/links" %>
</div>
</div>