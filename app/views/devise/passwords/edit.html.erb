<% content_for(:title, "パスワード変更ページ") %>
<div class="my-container">
  <h1><%= t("devise.passwords.edit.change_your_password") %></h1>
  <div class="max-w-md mx-auto bg-white border border-stone-200 rounded-md shadow-md p-8">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

  <%#= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-4">
    <%= f.label :password, t("devise.passwords.edit.new_password"), class: "inline-block mb-1" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "my-form-text" %>
    <% if resource.errors[:password].any? %>
      <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:password).first %></p>
    <% end %>
  </div>

  <div class="mb-10">
    <%= f.label :password_confirmation, t("devise.passwords.edit.confirm_new_password"), class: "inline-block mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "my-form-text" %>
    <% if resource.errors[:password_confirmation].any? %>
      <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:password_confirmation).first %></p>
    <% end %>
  </div>

  <div class="text-center">
    <%= f.submit t("devise.passwords.edit.change_my_password"), class: "w-full bg-orange-400 transition text-white px-4 py-2 rounded hover:bg-orange-500 cursor-pointer" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>
</div>
