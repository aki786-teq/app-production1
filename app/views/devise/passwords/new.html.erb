<div class="my-container">
  <h1><%= t("devise.passwords.new.forgot_your_password") %></h1>
  <div class="max-w-md mx-auto bg-white border border-stone-200 rounded-md shadow-md p-8">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%#= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email, t("activerecord.attributes.user.email"), class: "inline-block mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "my-form-text" %>
      <% if resource.errors[:email].any? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:email).first %></p>
      <% end %>
    </div>

    <div class="text-center">
      <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions"), class: "w-full bg-orange-400 transition text-white px-4 py-2 rounded hover:bg-orange-500 cursor-pointer" %>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
</div>
