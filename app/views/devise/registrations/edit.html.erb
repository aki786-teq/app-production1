<% content_for(:title, "アカウント情報変更ページ") %>
<div class="my-container">
<h1>アカウント情報変更</h1>

<div class="max-w-md mx-auto bg-white border border-stone-200 rounded-md shadow-md p-8">
<%= form_with(model: resource, url: registration_path(resource_name), method: :put, local: true) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "inline-block mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "my-form-text" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>以下のメール変更確認待ち: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-4">
    <%= f.label :password, "新しいパスワード", class: "inline-block mb-1" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "my-form-text" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "inline-block mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "my-form-text" %>
  </div>

  <div class="mb-10">
    <%= f.label :current_password, "現在のパスワード（必須）", class: "inline-block mb-1" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "my-form-text" %>
    <% if resource.errors[:current_password].any? %>
      <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:current_password).first %></p>
    <% end %>
  </div>

  <div class="text-center">
    <%= f.submit "更新する", class: "w-full bg-orange-400 transition text-white px-4 py-2 rounded hover:bg-orange-500 cursor-pointer" %>
  </div>
<% end %>

<%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
<%#= link_to  "戻る", :back %>

</div>
</div>