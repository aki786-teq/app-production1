<div class="my-container">
<h1><%= t('.sign_up') %></h1>

<div class="max-w-md mx-auto bg-white border border-stone-200 rounded-md shadow-md p-8">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%# = render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :name, class: "inline-block mb-1" %>
      <%= f.text_field :name, autofocus: true, class: "my-form-text" %>
      <% if resource.errors[:name].any? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:name).first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "inline-block mb-1" %>
      <%= f.email_field :email, autocomplete: "email", class: "my-form-text" %>
      <% if resource.errors[:email].any? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:email).first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "inline-block mb-1" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "my-form-text" %>
      <% if resource.errors[:password].any? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:password).first %></p>
      <% end %>
    </div>

    <div class="mb-10">
      <%= f.label :password_confirmation, class: "inline-block mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "my-form-text" %>
      <% if resource.errors[:password_confirmation].any? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors.full_messages_for(:password_confirmation).first %></p>
      <% end %>
    </div>

    <div class="text-center">
      <%= f.submit t('.sign_up'), class: "w-full bg-orange-400 transition text-white px-4 py-2 rounded hover:bg-orange-500 cursor-pointer" %>
    </div>
  <% end %>

  <p class="text-center mt-6 text-sm font-semibold">
    <%= link_to "ログインはこちら", new_session_path(resource_name) %>
  </p>
  <%# = render "devise/shared/links" %>
</div>
</div>