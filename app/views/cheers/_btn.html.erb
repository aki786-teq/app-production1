<% if user_signed_in? %>
  <% if board.cheered_by?(current_user) %>
    <%= link_to board_cheer_path(board), 
        id: "cheer-button-#{board.id}", 
        data: { 
          turbo_method: :delete
        }, 
        class: "relative text-xl text-orange-500 hover:text-orange-600 transition" do %>
      <%= icon_with_text("solid", "fire", "#{board.cheers.count}") %>
    <% end %>
  <% else %>
    <%= link_to board_cheer_path(board), 
        id: "cheer-button-#{board.id}", 
        data: { 
          turbo_method: :post
        }, 
        class: "relative text-xl hover:text-orange-600 transition" do %>
      <%= icon_with_text("solid", "fire", "#{board.cheers.count}") %>
    <% end %>
  <% end %>
<% else %>
  <!-- ログアウト状態では応援ボタンはクリックできない） -->
  <span class="relative text-xl text-gray-400">
    <%= icon_with_text("solid", "fire", "#{board.cheers.count}") %>
  </span>
<% end %>