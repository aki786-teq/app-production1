<% if board.cheered_by?(current_user) %>
  <%= link_to board_cheer_path(board), data: { turbo_method: :delete }, class: "text-xl text-red-500 hover:text-orange-600 transition" do %>
    <%= icon_with_text("solid", "fire", "#{board.cheers.count}") %>
  <% end %>
<% else %>
  <%= link_to board_cheer_path(board), data: { turbo_method: :post }, class: "text-xl hover:text-orange-600 transition" do %>
    <%= icon_with_text("solid", "fire", "#{board.cheers.count}") %>
  <% end %>
<% end %>
