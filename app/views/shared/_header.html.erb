<header class="bg-yellow-50 shadow-sm">
  <nav class="container mx-auto px-4 py-3 flex justify-between items-center">

    <!-- ロゴ -->
    <div class="flex h-13 items-center">
      <%= link_to '/', class: "block max-w-[200px]" do %>
      <%= image_tag 'logo.png', alt: "まいにち前屈", class: "block w-full transition hover:opacity-75" %>
      <% end %>
    </div>

    <!-- 認証リンク -->
    <div class="space-x-4">
      <% if user_signed_in? %>
        <%= link_to "目標を編集", edit_goal_path, class: "px-4 py-2 bg-lime-500 text-white transition rounded hover:bg-green-500" %>
        <% if current_user.boards.where(created_at: Time.zone.today.all_day).exists? %>
    <%= link_to "投稿作成", "#",
      class: "px-4 py-2 bg-gray-400 text-white rounded cursor-not-allowed",
      onclick: "alert('※1日に投稿できるのは1件までです。'); return false;" %>
  <% else %>
    <%= link_to "投稿作成", new_board_path, class: "px-4 py-2 bg-lime-500 text-white transition rounded hover:bg-green-500" %>
  <% end %>
        <%= link_to '投稿一覧', boards_path, class: 'px-4 py-2 bg-lime-500 text-white transition rounded hover:bg-green-500' %>
        <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: 'px-4 py-2 bg-neutral-400 text-white transition rounded hover:bg-neutral-500' %>
        <%= link_to 'アカウントを削除', user_registration_path, data: { turbo_confirm: "本当に削除しますか？全てのデータが削除されます。この操作は取り消せません。", turbo_method: :delete }, class: 'px-4 py-2 bg-red-500 text-white transition rounded hover:bg-red-600' %>
      <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: 'px-4 py-2 bg-lime-500 text-white transition rounded hover:bg-green-500' %>
        <%= link_to '新規登録', new_user_registration_path, class: 'px-4 py-2 bg-lime-500 text-white transition rounded hover:bg-green-500' %>
        <%= link_to '投稿一覧', boards_path, class: 'px-4 py-2 bg-lime-500 text-white transition rounded hover:bg-green-500' %>
      <% end %>
    </div>

  </nav>
</header>
